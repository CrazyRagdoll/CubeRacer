#include "CubeAsset.h"
#include <SDL2/SDL.h>

#ifndef PLAYER_H_
#define PLAYER_H_

class Player : public GameAsset {
 public:
  Player();
  Player(float x, float y, float z);
    ~Player();;

  //Score
  virtual void incScore(double points);

  //Movement
  virtual void move(double moving);

  //Ammo
  virtual double getAmmo();
  virtual double getAmmoRate();
  virtual void changeAmmo(int ammoVal);

  virtual void update();
  virtual void draw();
  virtual void clean();

  //Killing the player
  virtual bool dead(){ isAlive = false; };
  virtual bool isItAlive(){ return isAlive; };

  //Adding ammo to give to the player
  static int Ammo;
  static double ammoRespawn;
  static double score;

  //is it alive?
  static bool isAlive;

  enum vertices {
	F0, F1, F2, F3, 
  };
 
  private:

};

#endif // PLAYER_H_
